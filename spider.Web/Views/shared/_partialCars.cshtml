@model IEnumerable<spider.AdvantageModels.Car>;

@if(Model is not null)
{
  
    
        <div class="container">
            <div class="row row-cols-2 row-cols-md-2 g-4">
              
                @foreach (var item in Model)
                {
                  <div class="col">
                    <div class="card h-100" id="car-card">
                      <div class="card-header text-center">
                          <div class="col">
                            <input  id="checkboxes" type="checkbox" name="checkboxes-cars" id="item-number" value=@item.imei></input>
                            <label for="item-number" id="car-model"> @item.model</label>
                          </div>
                      </div>
                      <div class="row text-center">
                        <p class="card-text" id="car-number">@item.number</p>
                      </div>
                    </div>
                  </div>
                }
             </div>
        </div>
}

                   

