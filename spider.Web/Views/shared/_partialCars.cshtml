@model IEnumerable<spider.AdvantageModels.Car>;

@if(Model is not null)
{
    <form method="post" asp-page="IndexModel" asp-page-handler="Routes" id="table">
        <div class="container">
            <div class="row row-cols-2 row-cols-md-4 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-header">
                                <div class="col">
                                    <input type="checkbox" name="checkboxes" id=@item.number value=@item.imei></input>
                                    <label for=@item.number> @item.model</label>
                                </div>
                            </div>
                            <div class="row">
                                <p class="card-text">@item.number</p>
                            </div>
                        </div>
                    </div>
                }
             </div>
        </div>
    </form>
}

                   

