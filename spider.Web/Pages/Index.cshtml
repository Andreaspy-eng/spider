@page
@using Microsoft.AspNetCore.Mvc.Localization
@using spider.Localization
@using Volo.Abp.Users
@using spider.Products;
@model spider.Web.Pages.IndexModel
@inject IHtmlLocalizer<spiderResource> L
@inject ICurrentUser CurrentUser

<div class="container">
    <div class="p-5 text-center">
        <h1>Ура, эта срань заработала</h1>
        <br/>
        <!--<img src="https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExMjliYTI3ZTEzMzE3NWUzNmZiMTdlNzI4ZjI4YjJhMmZhM2QxZmQzYiZjdD1n/hfGBJtI9p1POZjNX2H/giphy.gif"/img>-->
        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }


        <div class="container">
        <div class="card-columns" style="column-count: 2 !important">

            @foreach (var hui in Model.invoices){
                    
               <div class="row">
                <div class="col-sm-8">
                  <div class="card">
                      <div class="card-body">
                        <h5 class="card-title">@hui.CounterpartyAddress</h5>
                        <p class="card-text">@hui.CounterpartyName</p>
                        <a href="#" class="btn btn-primary">Перейти куда-нибудь</a>
                      </div>
                  </div>
        </div>
                    </div>
                
                  }
              </div>
        </div>
   
        
    </div>
</div>
